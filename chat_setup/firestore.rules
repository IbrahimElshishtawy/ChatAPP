rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (
        userId == request.auth.uid ||
        resource.data.privacySettings.profileVisibility == 'everyone' ||
        (resource.data.privacySettings.profileVisibility == 'contacts' && exists(/databases/$(database)/documents/following/$(userId)/users/$(request.auth.uid)))
      );
      allow write: if isOwner(userId) && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isVerified', 'role']));
      allow update: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /chats/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.members;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid in resource.data.members;

      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
        allow create: if isSignedIn()
                      && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members
                      && !(request.auth.uid in get(/databases/$(database)/documents/users/$(request.resource.data.receiverId)).data.get('blockedUsers', []));

        // Message Editing Rules: 5 minutes limit, max 3 edits
        allow update: if isSignedIn()
                      && request.auth.uid == resource.data.senderId
                      && request.time < resource.data.canEditUntil
                      && (resource.data.editCount == null || resource.data.editCount < 3)
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'isEdited', 'editedAt', 'editCount']);
      }
    }

    match /channels/{channelId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.admins);

      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/channels/$(channelId)).data.admins || request.auth.uid == get(/databases/$(database)/documents/channels/$(channelId)).data.ownerId);

        // Message Editing Rules: 5 minutes limit, max 3 edits
        allow update: if isSignedIn()
                      && request.auth.uid == resource.data.senderId
                      && request.time < resource.data.canEditUntil
                      && (resource.data.editCount == null || resource.data.editCount < 3)
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'isEdited', 'editedAt', 'editCount']);
      }
    }

    match /groups/{groupId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.members;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid in resource.data.members;

      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        // Message Editing Rules: 5 minutes limit, max 3 edits
        allow update: if isSignedIn()
                      && request.auth.uid == resource.data.senderId
                      && request.time < resource.data.canEditUntil
                      && (resource.data.editCount == null || resource.data.editCount < 3)
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['text', 'isEdited', 'editedAt', 'editCount']);
      }
    }

    match /calls/{callId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.callerId || request.auth.uid == resource.data.receiverId);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == resource.data.callerId || request.auth.uid == resource.data.receiverId);
    }

    match /following/{userId}/users/{followedId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /followers/{userId}/users/{followerId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == followerId;
    }

    match /verification_requests/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
